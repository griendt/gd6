@using web.Models
<text
    x="@(Territory.Centroid.X - 10)"
    y="@(Territory.Centroid.Y - 20)"
    text-anchor="end"
    font-family="Noticia"
    font-size="40"
    font-weight="800"
    dominant-baseline="central"
    fill="@Fill"
    stroke="@Stroke"
    stroke-width="@StrokeWidth"
    font-style="italic"
    filter="url(#textShadow)"
    style="user-select: none; pointer-events: none"
>
    @Territory.Identifier
</text>

@code {
    [Parameter] public required Territory Territory { get; set; }

    [Parameter] public string Fill { get; set; } = "var(--bs-warning)";
    [Parameter] public string Stroke { get; set; } = "#000";
    [Parameter] public string StrokeWidth { get; set; } = "0";
}
