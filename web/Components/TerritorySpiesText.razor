@using web.Models
<circle
    r="@(14 + 4 * (Territory.Spies / 10))"
    cx="@(Territory.Centroid.X + 35)"
    cy="@(Territory.Centroid.Y - 48)"
    fill="#00dc"
    stroke="#00a"
    stroke-width="2px"/>

<text
    x="@(Territory.Centroid.X + 35)"
    y="@(Territory.Centroid.Y - 48)"
    text-anchor="middle"
    font-family="Noticia"
    font-size="26"
    font-weight="800"
    dominant-baseline="central"
    fill="@Fill"
    stroke="@Stroke"
    stroke-width="@StrokeWidth"
    style="user-select: none; pointer-events: none">
    @Territory.Spies
</text>

@code {
    [Parameter] public required Territory Territory { get; set; }
    [Parameter] public string Fill { get; set; } = "var(--bs-light)";
    [Parameter] public string Stroke { get; set; } = "#000";
    [Parameter] public string StrokeWidth { get; set; } = "0";
}
