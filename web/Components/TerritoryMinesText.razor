@using web.Models
<svg
    x="@(Territory.Centroid.X - 52)"
    y="@(Territory.Centroid.Y - 3)"
    width="@(36 + 8 * (Territory.Armies / 10))px"
    height="@(36 + 8 * (Territory.Armies / 10))px"
    viewBox="-2 -2 24 24"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="xMinYMin">
    <path
        fill="#f00"
        stroke="#a00"
        stroke-width="2px"
        d="M20 8.163A2.106 2.106 0 0 0 18.926 10c0 .789.433 1.476 1.074 1.837l-.717 2.406a2.105 2.105 0 0 0-2.218 3.058l-2.062 1.602A2.104 2.104 0 0 0 11.633 20l-3.29-.008a2.104 2.104 0 0 0-3.362-1.094l-2.06-1.615A2.105 2.105 0 0 0 .715 14.24L0 11.825A2.106 2.106 0 0 0 1.051 10C1.051 9.22.63 8.54 0 8.175L.715 5.76a2.105 2.105 0 0 0 2.207-3.043L4.98 1.102A2.104 2.104 0 0 0 8.342.008L11.634 0a2.104 2.104 0 0 0 3.37 1.097l2.06 1.603a2.105 2.105 0 0 0 2.218 3.058L20 8.162z"/>
</svg>

<text
    x="@(Territory.Centroid.X - 35)"
    y="@(Territory.Centroid.Y + 15)"
    text-anchor="middle"
    font-family="Noticia"
    font-size="26"
    font-weight="800"
    dominant-baseline="central"
    fill="@Fill"
    stroke="@Stroke"
    stroke-width="@StrokeWidth"
    style="user-select: none; pointer-events: none">
    @Territory.Mines
</text>

@code {
    [Parameter] public required Territory Territory { get; set; }
    [Parameter] public string Fill { get; set; } = "var(--bs-light)";
    [Parameter] public string Stroke { get; set; } = "#000";
    [Parameter] public string StrokeWidth { get; set; } = "0";
}
