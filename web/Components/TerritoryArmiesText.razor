@using web.Models
<circle
    r="@(14 + 4 * (Territory.Armies / 10))"
    cx="@(Territory.Centroid.X + 5)"
    cy="@Territory.Centroid.Y"
    fill="#000c"
    stroke="#333a"
    stroke-width="2px"/>

<text
    x="@(Territory.Centroid.X + 5)"
    y="@Territory.Centroid.Y"
    text-anchor="middle"
    font-family="Noticia"
    font-size="26"
    font-weight="800"
    dominant-baseline="central"
    fill="@Fill"
    stroke="@Stroke"
    stroke-width="@StrokeWidth"
    style="user-select: none; pointer-events: none">
    @Territory.Armies
</text>

@code {
    [Parameter] public required Territory Territory { get; set; }
    [Parameter] public string Fill { get; set; } = "var(--bs-light)";
    [Parameter] public string Stroke { get; set; } = "#0000";
    [Parameter] public string StrokeWidth { get; set; } = "0";
}
