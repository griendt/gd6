@using web.Models
<text
    x="@(Territory.Centroid.X - 18)"
    y="@(Territory.Centroid.Y - 20 + _offsetY())"
    text-anchor="@(_offsetY() > 0 ? "start" : "end")"
    font-family="Noticia"
    font-size="40"
    font-weight="800"
    dominant-baseline="central"
    fill="@Fill"
    stroke="@Stroke"
    stroke-width="@StrokeWidth"
    font-style="italic"
    filter="url(#textShadow)"
    style="user-select: none; pointer-events: none"
>
    @Territory.Identifier
</text>

@code {
    [Parameter] public required Territory Territory { get; set; }

    [Parameter] public string Fill { get; set; } = "var(--bs-warning)";
    [Parameter] public string Stroke { get; set; } = "#000";
    [Parameter] public string StrokeWidth { get; set; } = "0";

    // This is ugly but just to make sure Raven's HQ name is displayed right
    private int _offsetY()
    {
        return Territory.Id switch
        {
            12 or 49 => 100,
            _ => 0,
        };
    }
}
